{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // Explicitly set for clarity
    "esModuleInterop": true, // Ensures ES imports work with CommonJS
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"] // This means '@' maps to the 'src' folder
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
